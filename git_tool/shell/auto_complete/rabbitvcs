_file_set() {
	if [ $1 -eq 0 ]; then
		complete -F _rabbitvcs rabbitvcs
	else
		complete -A file -F _rabbitvcs rabbitvcs
	fi
}

_rabbitvcs()
{
    local cur
 
    COMPREPLY=()
    _get_comp_words_by_ref cur
 
    if [ $COMP_CWORD = 1 ]; then
        _file_set 0
        COMPREPLY=( $( compgen -W 'update commit push log revert reset checkout stage unstage skiptree noskiptree delete clone' -- "$cur" ) )
    elif [ $COMP_CWORD -ge 2 ]; then
		if [ ${COMP_WORDS[1]} = "update" ] || [ ${COMP_WORDS[1]} = "push" ]; then
			_file_set 0
		else
			_file_set 1
		fi
    fi
}

_file_set 0
